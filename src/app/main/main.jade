main(role="main")
  .row
    .large-3.columns
      app-fdr-side-bar
    .large-9.columns
      .row
        app-fdr-product(
          class=[
            'large-3',
            'columns'
          ]
          ng-repeat="product in main.products track by $index"
          app-fdr-product-name="product.productDisplayName_en"
          app-fdr-product-img="product.images[1]"
          app-fdr-product-id="product.id"
          )